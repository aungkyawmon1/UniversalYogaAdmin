<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CourseDetailActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tvNameTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/TextAppearance.MaterialComponents.Headline4" />


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/course_card_background">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/baseline_people_outline_24"
                            app:tint="@color/gray" />


                        <TextView
                            android:id="@+id/tvCapacity"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Capacity"
                            style="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/baseline_access_time_24"
                            app:tint="@color/gray" />


                        <TextView
                            android:id="@+id/tvDuration"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="@string/class_date_of_class"
                            style="@style/TextAppearance.MaterialComponents.Subtitle1"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/euro"
                            app:tint="@color/gray" />


                        <TextView
                            android:id="@+id/tvPrice"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="@string/class_date_of_class"
                            style="@style/TextAppearance.MaterialComponents.Subtitle1"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/yoga_type"
                            app:tint="@color/gray" />

                        <TextView
                            android:id="@+id/tvYogaType"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="@string/class_date_of_class"
                            style="@style/TextAppearance.MaterialComponents.Subtitle1"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/line_chart"
                            app:tint="@color/gray" />

                        <TextView
                            android:id="@+id/tvYogaLevel"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="@string/class_date_of_class"
                            style="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/descTitle"
                        android:layout_marginTop="12dp"
                        android:text="Description"
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tvDescription"
                        android:visibility="gone"
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>

                </LinearLayout>



                <!-- Publish Button -->
                <Button
                    android:id="@+id/buttonPublish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Publish Course"
                    android:backgroundTint="@color/primary"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="16dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvClass"
                    android:text="@string/class_name"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    android:layout_width="0dp"
                    android:layout_weight="1.9"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/ivAddClass"
                    android:src="@drawable/baseline_add_box_24"
                    android:layout_width="24dp"
                    android:layout_weight="0.1"
                    android:layout_height="24dp"
                    app:tint="@color/primary"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvClass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>